<%= link_to user_path(id: user.id) do %> 
  <div class="relative w-40 rounded shadow-lg">
    <%= image_tag user.user_cover, class: 'w-full' %>
    <%= image_tag user.avatar, class: 'shadow-lg rounded-full h-auto align-middle border-none absolute ml-10 -mt-10 w-20' %>
    <div class="h-full px-6 pt-12 pb-4 justify-center">
      <div class="h-1/8 font-bold text-xs text-center mb-2">
        <%= user.name %>
      </div>
      <div class="h-7/8 text-gray-700 text-sm overflow-visible">
        <%= user.introduction.truncate(24) %>
      </div>
    </div>
  </div>
<% end %>  
