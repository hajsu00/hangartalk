<div class="mx-auto px-4">
  <div class="flex flex-row px-4">
    <%= link_to :back do %>
      <i class="fa-solid fa-angle-left fa-2x pr-4"></i>
    <% end %>
    <div class="flex flex-col">
      <div class="text-2xl font-bold pr-4"><%= @user.name %></div>
      <% if controller.action_name == "following_index" %>
        <div class="text-xs"><%= "#{@user.following.count}人をフォロー中" %></div>
      <% else %>
        <div class="text-xs"><%= "#{@user.followers.count}人のフォロワー" %></div>
      <% end %>
    </div>
  </div>
  <% if users.any? %>
    <div class='grid grid-cols-2'>
      <%= render partial: "users/show_follow", collection: users, as: :user %>
    </div>
  <% end %>
  <%= paginate @users, left: 3, right: 3 %>  
</div> 
