<% provide(:title, '新しいフライト（飛行機）') %>
<% provide(:button_text, '登録する') %>

<div class="main">
  <h1>新しいフライト（飛行機）</h1>
  <%= form_with(model: @aeroplane_flight, local: true) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <h2>基本事項</h2>
    <div class="content-inner-block">
      <div class="input-field">
        <%= f.label :date, "出発日", class: 'label' %>
        <%= f.date_field :date, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :departure_point, "出発地", class: 'label' %>
        <%= f.text_field :departure_point, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :arrival_point, "到着地", class: 'label' %>
        <%= f.text_field :arrival_point, class: 'form-control' %>
      </div>
    <div class="content-inner-block">
      <div class="input-field">
        <%= f.label :moving_time, "出発時刻", class: 'label' %>
        <%= f.time_field :moving_time, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :stop_time, "到着時刻", class: 'label' %>
        <%= f.time_field :stop_time, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :exercises_or_maneuvers, "飛行内容", class: 'label' %>
        <%= f.text_area :exercises_or_maneuvers, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :number_of_takeoff, "離陸回数", class: 'label' %>
        <%= f.number_field :number_of_takeoff, value: 1, class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :number_of_landing, "着陸回数", class: 'label' %>
        <%= f.number_field :number_of_landing, value: 1, class: 'form-control' %>
      </div>
    </div>

    <h2>使用機体</h2>
    <div class="content-inner-block">
      <div class="input-field">
        <%= f.label :aeroplane_type, "航空機の型式", class: 'label' %>
        <%= f.collection_select :aeroplane_type, @aeroplane_type, :id, :aircraft_type, prompt: "航空機の型式を選択してください", class: 'form-control' %>
      </div>
      <div class="input-field">
        <%= f.label :aeroplane_ident, "登録記号", class: 'label' %>
        <%= f.text_field :aeroplane_ident, class: 'form-control' %>
      </div>
    </div>

    <h2>操縦種別</h2>
    <div class="content-inner-block">
      <div class="radio-button-block">
        <div class="radio-element">
          <%= f.radio_button :flight_role, :"機長", checked: true, class: "radio-bnutton" %>
          <%= f.label :flight_role, "機長", value: :"機長", class: "radio-label" %>
        </div>
        <div class="radio-element">
          <%= f.radio_button :flight_role, :"単独飛行" %>
          <%= f.label :flight_role, "単独飛行", value: :"単独飛行", class: "radio-label" %>
        </div>
        <div class="radio-element">
          <%= f.radio_button :flight_role, :"同乗教育" %>
          <%= f.label :flight_role, "同乗教育", value: :"同乗教育", class: "radio-label" %>
        </div>
      </div>
      <div class="check-box-block">
        <div class="check-box-element">
          <%= f.check_box :is_instructor, {}, true, false %>
          <%= f.label :is_instructor, "操縦教員としてのフライト", class: "check-box-label" %>
        </div>
      </div>
    </div>

    <h2>フライトの詳細</h2>
      <h3>飛行内容等</h3>
      <div class="check-box-block">
        <div class="check-box-element">
          <%= f.check_box :is_cross_country, {}, true, false %>
          <%= f.label :is_cross_country, "野外飛行" %>
        </div>
        <div class="check-box-element">
          <%= f.check_box :is_night_flight, {}, true, false %>
          <%= f.label :is_night_flight, "夜間飛行" %>
        </div>
        
        <div class="check-box-element">
          <%= f.check_box :is_cross_country, {}, true, false %>
          <%= f.label :is_cross_country, "フード" %>
        </div>
        <div class="check-box-element">
          <%= f.check_box :is_instrument, {}, true, false %>
          <%= f.label :is_instrument, "計器飛行" %>
        </div>
        <div class="check-box-element">
          <%= f.check_box :is_simulator, {}, true, false %>
          <%= f.label :is_simulator, "飛行訓練装置" %>
        </div>
        <div class="check-box-element">
          <%= f.check_box :is_stall_recovery, {}, true, false %>
          <%= f.label :is_stall_recovery, "失速からの回復" %>
        </div>
      </div>
      <div class="input-field">
        <%= f.label :note, "備考", class: 'label' %>
        <%= f.text_area :note, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>