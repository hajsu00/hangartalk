<%= link_to group_path(id: group.id) do %>
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <%= image_tag group.group_cover, class: 'w-full' %>
    <div class="px-6 py-4">
      <div class="font-bold text-base mb-2"><%= "#{group.name}" %></div>
      <p class="text-gray-700 text-sm">
        <%= group.introduction.truncate(36) %> 
      </p>
    </div>
  </div>
<% end %>
