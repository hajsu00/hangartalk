<% provide(:title, '特定操縦技能審査合格証詳細') %>

<% content_for :supplementary_information do %>
  <%= "#{@license.show_license_category}（#{@license.show_aircraft_category}）：#{@license.code}" %>
<% end %>

<div class="max-w-lg border rounded-lg mx-auto">
  <div class="flex flex-col gap-4 p-4 md:p-8 justify-center">
    <div class="bg-white py-6 sm:py-8 lg:py-12">
      <div class="max-w-screen-2xl px-4 md:px-8 mx-auto justify-center">
        <%= render partial: 'reccurent_history_card', locals: { reccurent_history: @reccurent_history } %>
      </div>
      <div class="flex justify-center items-center p-4">
        <%= link_to edit_user_license_reccurent_history_path(@user, @license) do %>
          <%= render partial: "shared/button", locals: {item: '編集'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
