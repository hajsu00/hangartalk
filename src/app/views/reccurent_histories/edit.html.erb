<% provide(:title, '特定操縦技能審査受験履歴') %>
<% provide(:button_text, '更新する') %>

<div class="mx-auto px-4">
  <div class="flex flex-row px-4">
    <%= link_to :back do %>
      <i class="fa-solid fa-angle-left fa-2x pr-4"></i>
    <% end %>
    <div class="flex flex-col">
       <div class="text-2xl font-bold pr-4"><%= @user.name %></div>
    </div>
  </div>

  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">特定操縦技能合格証の編集</h2>
      <%= form_with(model: [@user, @license, @reccurent_history], local: true) do |f| %> 
        <%= render 'shared/error_messages', object: f.object %>
        <div class="max-w-lg border rounded-lg mx-auto">
          <div class="flex flex-col gap-4 p-4 md:p-8">
            <div class="flex flex-col">
              <div class="text-2xl font-bold pr-4"><%= @user.name %></div>
              <div class="text-md mt-2"><%= "#{@license.show_license_category}（#{@license.show_aircraft_category}）：第 #{@license.code} 号" %></div>
            </div>
            <div>
              <%= f.label :date, "合格日", class: 'inline-block text-gray-800 text-sm sm:text-base mb-2' %>
              <%= f.date_field :date, autofocus: true, autocomplete: "date_of_issue", class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
            </div>
            <div>
              <%= f.label :valid_for, "有効期間（通常、合格日から２年間）", class: 'inline-block text-gray-800 text-sm sm:text-base mb-2' %>
              <%= f.number_field :valid_for, autofocus: true, autocomplete: "valid_for", class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
            </div>
            <div>
              <%= f.submit yield(:button_text), class: "block bg-gray-800 hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
