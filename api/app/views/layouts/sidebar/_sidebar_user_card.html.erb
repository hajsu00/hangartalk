<div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg mt-16">
  <div class="px-6 pb-6">
    <div class="flex flex-wrap justify-center">
      <div class="w-full px-4 flex justify-center">
        <div class="relative">
          <%= image_tag @current_user.avatar, class: 'shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px' %>
        </div>
      </div>
      <div class="w-full px-2 text-center mt-20">
        <div class="flex justify-center py-4 lg:pt-4 pt-8">
          <%= link_to following_user_path(@current_user) do %>
            <div class="mr-4 p-3 text-center">
              <span id='sidebar_following_count' class="test-sm sm:text-lg font-bold block tracking-wide text-gray-600">
                <%= @current_user.following.count %>
              </span>
              <span class="text-xs sm:test-sm text-gray-400">フォロー</span>
            </div>
          <% end %>
          <%= link_to followers_user_path(@current_user) do %>
            <div class="mr-4 p-3 text-center">
              <span id='sidebar_follower_count' class="test-sm sm:text-lg font-bold block tracking-wide text-gray-600">
                <%= @current_user.followers.count %>
              </span>
              <span class="text-xs sm:test-sm text-gray-400">フォロワー</span>
            </div>
          <% end %>
            <%= link_to glider_flights_path(@gliderflights) do %>  
              <div class="lg:mr-4 p-3 text-center">
                <span class="test-sm sm:text-lg font-bold block uppercase tracking-wide text-gray-600">
                  <%= !@current_user.glider_initial_log.nil? && !@current_user.glider_flights.nil? ? total_flight_time(@current_user) : "00 + 00" %>
                </span>
                <span class="text-xs sm:test-sm text-gray-400">総飛行時間</span>
              </div>
            <% end %>
        </div>
      </div>
    </div>
    <div class="text-center">
      <h3 class="text-xl font-semibold leading-normal mb-2 text-gray-700 mb-2">
      <%= link_to user_path(@current_user.id) do %>
        <%= @current_user.name %> 
      <% end %>
      </h3>
      <div class="text-sm leading-normal mt-0 mb-2 text-gray-400 font-bold uppercase">
        <i class="fas fa-map-marker-alt mr-2 text-lg text-gray-400"></i>
        <%= @current_user.location %>
      </div>
    </div>
  </div>
</div>