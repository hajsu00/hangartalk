<% provide(:title, "グループフライト") %>
<% @user ||= current_user %>

<div class="bg-white pt-6">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <!-- ログブックセクション -->
    <div class="border rounded-lg mx-auto my-4">
      <div class="flex flex-col p-4 md:p-8 justify-center">
        <div class="bg-white pt-6">
          <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">
            <%= "#{@current_group.name}のフライト（#{@group_gliderflights.current_page}ページ目）" %>
          </h2>
          <% if @group_gliderflights.any? %>
            <%= paginate @group_gliderflights, left: 3, right: 3 %> 
            <div class="overflow-x-auto">
              <div class="w-full lg:w-5/6">
                <div class="bg-white shadow-md rounded my-6">
                  <table class="min-w-max w-full table-auto">
                    <%= render 'group_gliderflights/index_header' %>
                    <tbody class="text-gray-600 text-sm font-light">
                      <%= render partial: 'group_gliderflights/index_record', collection: @group_gliderflights, as: :group_gliderflight %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <%= paginate @group_gliderflights %>
            <% if @group_gliderflights.last_page? %>
              <div class="flex justify-center items-center p-4">
                <%= link_to new_group_gliderflight_path do %>
                  <%= render partial: "shared/button", locals: {item: '新しいグループフライトを登録'} %>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="justify-center items-center p-4">
              <div class="max-w-lg mx-auto bg-yellow-100 border-l-4 border-yellow-500 text-yellow-900 p-4 my-4" role="alert">
                まだグループフライトが登録されていません。
              </div>
              <div class="flex justify-center" role="alert">
                <%= link_to "新しいフライトを登録する方はこちら", new_group_gliderflight_path, class: "text-indigo-600 hover:text-indigo-500 hover:underline active:text-indigo-800 transition duration-100" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>