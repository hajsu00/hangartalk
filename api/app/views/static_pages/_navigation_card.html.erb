<div class="flex flex-col w-108 lg:w-96 p-8 lg:px-12 mt-0 max-w-3xl bg-white border border-gray-300 rounded-lg shadow-lg mx-auto">
  <%= link_to new_user_registration_path do %>
    <div class="flex flex-col">
      <p class="text-center text-sm font-bold text-gray-800">新しくアカウントを作る</p>
      <div class="mt-2 mb-4">
        <%= render partial: 'shared/purple_filled_button', locals: { item: 'アカウント登録' } %>
      </div>
    </div>
  <% end %>
  <%= link_to new_user_session_path do %>
    <div class="flex flex-col">
      <p class="text-center text-sm font-bold text-gray-800">アカウントをお持ちの方</p>
      <div class="mt-2 mb-2">
        <%= render partial: 'shared/purple_outlining_button', locals: { item: 'ログイン' } %>
      </div>
    </div>
  <% end %>
  <!-- ボーダー（始まり） -->
  <div class="w-full border-b-2 border-gray-300 py-2 mx-auto"></div>
  <!-- ボーダー（終わり） -->
  <%= link_to users_guest_sign_in_path, method: :post do %>
    <div class="flex flex-col mt-6">
      <p class="text-center text-sm font-bold text-gray-800">サービスを体験したい方はこちら</p>
      <div class="mt-2">
        <%= render partial: 'shared/black_filled_button', locals: { item: 'ゲストログイン（閲覧用）' } %>
      </div>
    </div>
  <% end %>
</div>
