<%= form_with(model: micropost.like_relationships.build(user_id: current_user.id), html: { method: :delete }, local: false) do |f| %>
  <%= hidden_field_tag :user_id, current_user.id %> 
  <%= button_tag type: 'submit' do %>
    <div class="flex group mx-8">
      <i class="fa-solid fa-thumbs-up text-gray-600 group-hover:text-blue-500 my-auto"></i>
      <p class="ml-2 text-gray-600 group-hover:text-blue-500">
        <%= micropost.number_of_liked %>
      </p>
    </div>
  <% end %> 
<% end %>