<div class="max-w-sm w-full lg:max-w-full lg:flex px-10 justify-center">
  <div class="bg-blue-200 shadow rounded mt-6 px-8 py-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-xs text-gray-600 flex items-center mb-2">
        <i class="fa-solid fa-lock mr-1"></i>
        非公開
      </div>
      <div class="text-gray-900 font-bold text-xl mb-2">
        <%= "#{@license.show_license_category}（#{@license.show_aircraft_category}）" %>
        <%= render partial: "shared/edit_license_button", locals: { item: "編集" } %>
      </div>
      <div class="text-gray-700 text-base text-lg">
        技能証明番号：第 <%= @license.code %> 号
      </div>
      <div class="text-gray-700 text-base text-lg">
        交付日：<%= @license.date_of_issue.strftime("%Y年%m月%d日") %>
      </div>
    </div>
    <div class="flex items-center">
      <div class="text-gray-700 text-base text-xs text-left flex-col">
        <div class="font-bold">特定操縦技能審査</div>
        <div class="text-gray-700 text-base text-sm text-right">
          <div>有効期限 2021年3月21日から</div>
          <div>2023年3月21日　　</div>
        </div>
      </div>
    </div>
  </div>
</div>
