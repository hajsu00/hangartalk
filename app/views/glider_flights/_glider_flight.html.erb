<% glider_flights.each do |glider_flight| %>
  <div class="panel panel-success">
    <div class="panel-body">
      <tr>
        <% flight_time = glider_each_flight_time(glider_flight) %>
        <!-- 基本事項 -->
        <td><%= glider_flight.log_number %></td>
        <td><%= glider_flight.departure_date %></td>
        <td><%= glider_flight.glider_type %></td>
        <td><%= glider_flight.glider_ident %></td>
        <td><%= glider_flight.departure_point %></td>
        <td><%= glider_flight.arrival_point %></td>
        <td><%= glider_flight.takeoff_time.strftime("%R") %></td>
        <td><%= glider_flight.landing_time.strftime("%R") %></td>
        <td><%= glider_flight.number_of_landing %></td>
        <!-- 滑空機による時間 -->
        <% if !glider_flight.is_motor_glider? %>
          <td><%= show_flight_time(flight_time) %></td> 
          <% if glider_flight.is_pic? %>
            <td><%= show_flight_time(flight_time) if glider_flight.is_winch? %></td>
            <td><%= show_flight_time(flight_time) if !glider_flight.is_winch? %></td>
          <% elsif !glider_flight.is_pic? && !glider_flight.is_dual? %>
            <td><%= show_flight_time(flight_time) if glider_flight.is_winch? %></td>
            <td><%= show_flight_time(flight_time) if !glider_flight.is_winch? %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
          <td><%= show_flight_time(flight_time) if glider_flight.is_dual? && glider_flight.is_winch? %></td>
          <td><%= show_flight_time(flight_time) if glider_flight.is_dual? && !glider_flight.is_winch? %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        <!-- 動力滑空機による時間  -->
        <% else %>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td><%= show_flight_time(flight_time) %></td> 
          <% if glider_flight.is_pic? %>
            <td><%= show_flight_time(flight_time) if glider_flight.is_power_flight? %></td>
            <td><%= show_flight_time(flight_time) if !glider_flight.is_power_flight? %></td>
          <% elsif !glider_flight.is_pic? && !glider_flight.is_dual? %>
            <td><%= show_flight_time(flight_time) if glider_flight.is_power_flight? %></td>
            <td><%= show_flight_time(flight_time) if !glider_flight.is_power_flight? %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
          <td><%= show_flight_time(flight_time) if glider_flight.is_dual? && glider_flight.is_power_flight? %></td>
          <td><%= show_flight_time(flight_time) if glider_flight.is_dual? && !glider_flight.is_power_flight? %></td>
        <% end %>
        <!-- その他の飛行時間 -->
        <td><%= show_flight_time(flight_time) if glider_flight.is_cross_country? %></td>
        <td><%= '離脱高度' %></td>
        <td><%= show_flight_time(flight_time) if glider_flight.is_instructor? %></td>
        <td><%= glider_flight.note %></td>
      </tr> 
    </div>
  </div>
<% end %>
      
<%= paginate glider_flights, left: 3, right: 3 %>  