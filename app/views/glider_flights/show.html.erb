<%
=begin%>
<% provide(:title, 'フライトの詳細') %>

 <div class="main">
  <h1>フライトの詳細</h1>
  <div class="display-flex">
    <button class="page-nav"><%= link_to "戻る", 'javascript:history.back()' %></button>
    <button class="page-nav"><%= link_to "編集", edit_glider_flight_path(id: params[:id]) %></button>
  </div>
  <div class="content-outer-block">
      <p>フライトログNo.：<span class="value"><%= @glider_flight.log_number %></span></p>
      <p>日付：<span class="value"><%= @glider_flight.date %></span></p>
      <p>航空機の型式：<span class="value"><%= show_aircraft_type(@glider_flight.glider_type) %></span></p>
      <p>登録記号：<span class="value"><%= @glider_flight.glider_ident %></span></p>
      <p>離着陸の区間：<span class="value"><%= @glider_flight.departure_and_arrival_point %></span></p>
    <div class="content-inner-block">
      <p>離陸時刻：<span class="value"><%= @glider_flight.takeoff_time.strftime("%R") %></span></p>
      <p>着陸回数：<span class="value"><%= @glider_flight.number_of_landing %></span></p>
      <p>着陸時刻：<span class="value"><%= @glider_flight.landing_time.strftime("%R") %></span></p>
      <p>離脱高度：<span class="value"><%= @glider_flight.release_alt %></span></p>
    </div>
    <div class="content-inner-block">
      <p>操縦区分.：<span class="value"><%= @glider_flight.flight_role %></span></p>
      <p><span class="value"><%= show_flight_info(@glider_flight.is_instructor, 'instructor') %></span></p>
      <p>曳航方式：<span class="value"><%= show_flight_info(@glider_flight.is_winch, 'winch') %></span></p>
      <p>補足事項：<span class="value"><%= show_flight_info(@glider_flight.is_cross_country, 'cross_country') %></span>
      <span class="value"><%= show_flight_info(@glider_flight.is_instructor, 'instructor') %></span>
      <span class="value"><%= @glider_flight.note %></span></p>
    </div>
  </div>
  <%= render partial: 'shared/micropost_form', locals: { target_flight: @glider_flight } %>  
</div> 
<%
=end%>

<% provide(:title, 'フライトの詳細') %>
<% @user ||= current_user %>

<div class="mx-auto px-4">
  <div class="flex flex-row px-4">
    <%= link_to :back do %>
      <i class="fa-solid fa-angle-left fa-2x pr-4"></i>
    <% end %>
    <div class="flex flex-col">
      <div class="text-2xl font-bold pr-4"><%= @user.name %></div>
    </div>
  </div>

  <div class="max-w-screen-2xl bg-white shadow py-6 sm:py-8 lg:py-12 px-4 md:px-8 mx-auto my-4 border rounded-lg flex-col">
    <div class="bg-white shadow py-6 sm:py-8 lg:py-12 px-4 md:px-8 mx-auto my-4 border rounded-lg flex-col justify-center p-4 md:p-8">
      <div>
        No. <%= @glider_flight.log_number %>
      </div>
      <div>
        <%= @glider_flight.date.strftime("%Y年%m月%d日") %>
      </div>
      <div>
        <%= "#{show_aircraft_type(@glider_flight.glider_type)}（#{@glider_flight.glider_ident}）" %>
      </div>
      <div>
        <%= @glider_flight.departure_and_arrival_point %>
      </div>
      <div>
        No. <%= @glider_flight.log_number %>
      </div>
      <p class='mt-3 font-bold inline-block text-gray-800 text-sm sm:text-base mb-2'>操縦区分</p>
      <div class="flex">
        <div class="inline-block align-middle mx-5">
          <%= @glider_flight.takeoff_time.strftime("%R") %>
        </div>
        <i class="fa-solid fa-plane-departure fa-lg inline-block align-middle"></i>
        <div class="flex-col inline-block align-middle mx-5">
          <div>
            <%= @glider_flight.release_alt %>
          </div>
          <div>
            <%= @glider_flight.number_of_landing %>
          </div>
        </div>
        <i class="fa-solid fa-plane-arrival fa-lg inline-block align-middle"></i>
        <div class="mx-5 inline-block align-middle">
          <%= @glider_flight.landing_time.strftime("%R") %>
        </div>
      </div>
      <div class="flex justify-center">
        <div>
          <%= link_to edit_user_glider_flight_path(@current_user.id, @glider_flight.id) do %>
            <%= render partial: "shared/button", locals: {item: '編集'} %>
          <% end %>
        </div>
        <div>
          <%= link_to user_glider_flight_path(@current_user.id, @glider_flight.id), method: :delete, data: { confirm: "本当に削除しますか？" } do %>
            <%= render partial: "shared/button", locals: {item: '削除'} %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render partial: 'shared/micropost_form', locals: { target_flight: @glider_flight } %>
  </div>
</div>