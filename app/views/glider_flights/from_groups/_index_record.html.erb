<%= fields_for 'glider_flights[]', glider_flight do |field| %>
  <tr class="cursor-pointer border-b border-gray-200 hover:bg-gray-100">
    <%= field.hidden_field :user_id, value: glider_flight.user_id %>
    <%= field.hidden_field :flight_role, value: glider_flight.flight_role %>
    <td class="py-3 px-6 text-center">
      <%= field.date_field :date, value: glider_flight.date, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
    <td class="py-3 px-6 text-left">
      <%= field.collection_select :glider_type, @glider_type, :id, :aircraft_type, selected: show_aircraft_type(glider_flight.glider_type), class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
    <td class="py-3 px-6 text-center">
      <%= field.text_field :glider_ident, value: glider_flight.glider_ident, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    <td class="py-3 px-6 text-center">
      <%= field.text_field :departure_and_arrival_point, value: glider_flight.departure_and_arrival_point, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
    <td class="py-3 px-6 text-center">
      <div class="flex">
        <%= field.select :is_winch, [["ウインチ曳航", true], ["航空機曳航", false]], selected: glider_flight.is_winch ? true : false %>
      </div>
    </td>
    <td class="py-3 px-6 text-center">
      <%= field.time_field :takeoff_time, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
    <td class="py-3 px-6 text-center">
      <%= field.time_field :landing_time, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
    <td class="py-3 px-6 text-center whitespace-nomal">
      飛行時間
    </td>
    <td class="py-3 px-6 text-center">
      <%= field.number_field :release_alt, {value: glider_flight.release_alt, step: 10, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2'} %>
    </td>
    <td class="py-3 px-6 text-center">
      <div class="flex">
        <%= field.check_box :is_cross_country, {}, true, false %>
        <%= field.label :is_cross_country, "クロスカントリー", selected: glider_flight.is_cross_country ? true : false %>
        <%= field.check_box :is_stall_recovery, {}, true, false %>
        <%= field.label :is_stall_recovery, "失速からの回復", selected: glider_flight.is_stall_recovery ? true : false  %>
      </div>
    </td>
    <td class="py-3 px-6 text-center">
      <%= field.text_area :note, value: glider_flight.note, class: 'w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2' %>
    </td>
  </tr>
<% end %>

