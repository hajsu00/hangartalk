<% if user_signed_in? %>
  <% signed_in_user = current_user %>
  <% flight_info = glider_page_total('all_pages') %>
      
  <!-- component -->
  <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
  <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

<div class="bg-gray-50">
  <div class="w-full px-4">
    <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg mt-16">
      <div class="px-6 pb-6">
        <div class="flex flex-wrap justify-center">
          <div class="w-full px-4 flex justify-center">
            <div class="relative">
              <img alt="..." src="https://demos.creative-tim.com/notus-js/assets/img/team-2-800x800.jpg" class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
            </div>
          </div>
          <div class="w-full px-2 text-center mt-20">
            <div class="flex justify-center py-4 lg:pt-4 pt-8">
              <%= link_to following_user_path(@current_user) do %>
                <div class="mr-4 p-3 text-center">
                  <span class="text-lg font-bold block tracking-wide text-blueGray-600">
                    <%= signed_in_user.following.count %>
                  </span>
                  <span class="text-sm text-blueGray-400">フォロー</span>
                </div>
              <% end %>
              <%= link_to followers_user_path(@current_user) do %>
                <div class="mr-4 p-3 text-center">
                  <span class="text-lg font-bold block tracking-wide text-blueGray-600">
                    <%= signed_in_user.followers.count %>
                  </span>
                  <span class="text-sm text-blueGray-400">フォロワー</span>
                </div>
              <% end %>
                <%= link_to user_glider_flights_path(@current_user, @gliderflights) do %>  
                <div class="lg:mr-4 p-3 text-center">
                  <span class="text-lg font-bold block uppercase tracking-wide text-blueGray-600">
                    <%= show_flight_time(flight_info[:non_power_total_time]) if flight_info[:non_power_total_time] != 0 %>
                  </span>
                  <span class="text-sm text-blueGray-400">総飛行時間</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2">
          <%= link_to user_path(@current_user.id) do %>
            <%= @current_user.name %> 
          <% end %>
          </h3>
          <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase">
            <i class="fas fa-map-marker-alt mr-2 text-lg text-blueGray-400"></i>
            <%= @current_user.location %>
          </div>
        </div>
        <%
=begin%>
 <div class="mt-4 py-4 border-t border-blueGray-200 text-center">
          <div class="flex flex-wrap justify-center">
            <div class="w-full lg:w-9/12 px-4">
              <div class="font-normal text-pink-500">
                <%= link_to 'プロフィール', user_path(@current_user.id) %>
              </div>
            </div>
          </div>
        </div> 
<%
=end%>
      </div>
    </div>
    <div class="py-8 px-4">
      <ul class="space-y-2">
        <li>
          <%= link_to @current_user do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg  hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
              <span class="ml-3">ダッシュボード</span>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
              <span class="ml-3">フィード</span>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to user_licenses_path(@current_user) do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg  hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path><path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path></svg>
              <span class="ml-3">保有ライセンス管理</span>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to user_glider_flights_path(@current_user, @gliderflights) do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg  hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
              <span class="ml-3">フライトログブック</span>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to groups_path do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg  hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
              <span class="ml-3">フライトクラブ</span>
            </div>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <div class="flex items-center p-2 text-base font-normal text-gray-900 rounded-lg  hover:bg-gray-100 ">
              <svg class="w-6 h-6 text-gray-500 transition duration-75 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
              <span class="ml-3">設定</span>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
<% end %>