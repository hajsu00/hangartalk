<% @user ||= current_user %>
<div class="flight_experiences">
  <h3>飛行経歴</h3>
  <% if @user.aeroplane_flights.any? %>

    <h3><a href="#">飛行機</a></h3>
    <ul>
      <li>総飛行時間 <%= aeroplane_total_flight_time(:total_time) %></li>
      <li>総離陸回数 <%= aeroplane_total_flight_time(:number_of_takeoff) %></li>
      <li>総着陸回数 <%= aeroplane_total_flight_time(:number_of_landing) %></li>
      <li>機長時間 <%= aeroplane_total_flight_time(:pic_time) %></li>
    </ul>
  <% end %>
</div>