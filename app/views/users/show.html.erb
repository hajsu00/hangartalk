<% provide(:title, @user.name) %>
<div class="user-container">
  <h1><%= @user.name %></h1>
  <div class="user-microposts">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render 'microposts-container' %>
      </ol>
    <% end %>
  </div>
</div>