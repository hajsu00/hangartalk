<% provide(:title, @user.name) %>

 <!-- component -->
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
<div class="mx-auto">
  <div class="flex flex-row pb-4">
    <% if @user != current_user %>
      <%= link_to :back do %>
        <i class="fa-solid fa-angle-left fa-2x pr-4"></i>
      <% end %>
    <% end %>
    <div class="flex flex-col">
      <div class="text-2xl font-bold pr-4"><%= @user.name %></div>
      <% case controller.action_name %>
        <% when "follower_index" %>
          <div class="text-xs"><%= "#{@user.followers.count}人のフォロワー" %></div>
        <% when "followings_index" %>
          <div class="text-xs"><%= "#{@user.following.count}人をフォロー中" %></div>
        <% when "show" %>
          <div class="text-xs"><%= "#{@user.microposts.count}件の投稿" %></div>
      <% end %>
    </div>
  </div>
  <div class="break-words bg-white rounded w-full h-full shadow-xl">
    <section class="relative block h-500-px">
      <div class="absolute top-0 w-full h-full bg-center bg-cover" style="
              background-image: url('https://images.unsplash.com/photo-1499336315816-097655dcfbda?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=2710&amp;q=80');
            ">
        <span id="blackOverlay" class="w-full h-full absolute opacity-50 bg-black"></span>
      </div>
      <div class="top-auto bottom-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden h-70-px" style="transform: translateZ(0px)">
        <svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
          <polygon class="text-blueGray-200 fill-current" points="2560 0 2560 100 0 100"></polygon>
        </svg>
      </div>
    </section>
    <section class="relative pt-16 bg-blueGray-200 rounded">
      <div class="container mx-auto px-4">
        <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg -mt-64">
          <div class="px-6">
            <div class="flex flex-wrap justify-center">
              <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
                <div class="relative">
                  <img alt="..." src="https://demos.creative-tim.com/notus-js/assets/img/team-2-800x800.jpg" class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
                </div>
              </div>
              <div class="w-full lg:w-4/12 px-4 lg:order-3 lg:text-right lg:self-center">
                <div class="py-6 px-6 mt-32 sm:mt-0">
                  <% if @user != current_user %>
                    <% if current_user.following?(@user) %>
                      <%= render partial: "shared/unfollow_button", locals: { item: "フォロー中" } %>
                    <% else %>
                      <%= render partial: "shared/follow_button", locals: { item: "フォロー" } %>
                    <% end %>
                  <% else %>
                    <%= link_to edit_user_registration_path do %>
                      <%= render partial: "shared/button", locals: {item: 'プロフィール編集'} %>
                    <% end %>

                  <% end %>
                </div>
              </div>
              <div class="w-full lg:w-4/12 px-4 lg:order-1">
                <div class="flex justify-center py-4 lg:pt-4 pt-8">
                  <%= link_to following_user_path(@user) do %>
                    <div class="mr-4 p-3 text-center">
                      <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                        <%= @user.following.count %>
                      </span>
                      <span class="text-sm text-blueGray-400">フォロー</span>
                    </div>
                  <% end %>
                  <%= link_to followers_user_path(@user) do %>
                    <div class="mr-4 p-3 text-center">
                      <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                        <%= @user.followers.count %>
                      </span>
                      <span class="text-sm text-blueGray-400">フォロワー</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="text-center mt-2">
              <h3 class="text-4xl font-semibold leading-normal mb-2 text-blueGray-700">
                <%= @user.name %>
              </h3>
              <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase">
                <i class="fas fa-map-marker-alt mr-2 text-lg text-blueGray-400"></i>
                <%= @user.location %>
              </div>
              <div class="mt-6 mb-2">
                <div class="py-2">
                  <%= render partial: "users/group_link", collection: @user.groups, as: :group %>
                </div>
                <div class="py-2">
                  <% if @user == current_user %>
                    <%= link_to user_glider_flights_path(@user, @gliderflights) do %> 
                      <%= render partial: "users/license_link", collection: @user.licenses, as: :license  %>
                    <% end %>
                  <% else %>
                    <%= render partial: "users/license_link", collection: @user.licenses, as: :license  %>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="mt-5 py-5 border-t border-blueGray-200 text-center">
              <div class="flex flex-wrap justify-center">
                <div class="w-full lg:w-9/12 px-4">
                  <span class="text-lg font-bold block tracking-wide text-blueGray-600">
                  <h2>グライダー</h2>
                  </span>
                  <% if @user == current_user %>
                    <%= link_to user_glider_flights_path(@user, @gliderflights) do %> 
                      <%= render partial: "users/glider_flights_link" %>
                    <% end %>
                  <% else %>
                    <%= render partial: "users/glider_flights_link" %>
                  <% end %>
                  <p class="text-left mb-4 text-lg leading-relaxed text-blueGray-700">
                    <%= @user.introduction %>
                  </p>
                  <button onclick="clickBtn()" class="font-normal text-pink-500">詳細を見る</button>
                  <div id="user-detail">
                    コンテンツ1
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- 投稿カード
        -->
        <div class="flex flex-col items-center justify-center">
          <%= render partial: "microposts/micropost_card", collection: @microposts, as: :micropost %>
        </div>
        <%= paginate @microposts, left: 3, right: 3 %> 
      </div>
    </section>
  </div>
</div>

<script>
//初期表示は非表示
document.getElementById("user-detail").style.display == "none";
function clickBtn(){
  const userDetail = document.getElementById("user-detail");
  if(userDetail.style.display == "none"){
    // hiddenで非表示
    userDetail.style.display = "block";
  }else{
    // visibleで表示
    userDetail.style.display = "none";
  }
}
</script>
